  <Methods>
    <CodeBlockMethod Name="OnUpdate" ExecSpace="All">
      <Return Type="void" SyncDirection="None" />
      <Arguments>
        <CodeBlockProperty Name="delta" Type="number" SyncDirection="None" />
      </Arguments>
      <Code><![CDATA[
if not self.count then
    return
end

self.time = self.time - delta

if self.time <= 0 then
	self.count = false
	self.time = 0
	self:ResetTimer(30)
end

self:SetTime(self.time)
]]></Code>
    </CodeBlockMethod>
    <CodeBlockMethod Name="SetTime" ExecSpace="All">
      <Return Type="void" SyncDirection="None" />
      <Arguments>
        <CodeBlockProperty Name="time" Type="number" DefaultValue="0" SyncDirection="None" />
      </Arguments>
      <Code><![CDATA[
time = math.floor(time)
local m = time / 60
local s = time % 60

self.text.Text = string.format("%02d:%02d",m,s)
]]></Code>
    </CodeBlockMethod>
    <CodeBlockMethod Name="ResetTimer" ExecSpace="All">
      <Return Type="void" SyncDirection="None" />
      <Arguments>
        <CodeBlockProperty Name="time" Type="number" DefaultValue="0" SyncDirection="None" />
      </Arguments>
      <Code><![CDATA[
self.time = time
self.count = true
]]></Code>
    </CodeBlockMethod>
